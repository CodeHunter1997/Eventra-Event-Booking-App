<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginTop="-35dp"
            android:src="@drawable/vector_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo and App Name -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/app_logo"
                android:contentDescription="Logo" />


            <TextView
                android:id="@+id/taglineTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Crafting Moments. Elevating Events"
                android:textSize="16sp"
                android:fontFamily="@font/inter_500"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-10dp"
                android:textColor="#5D6903" />

            <!-- Forget Password Heading -->
            <TextView
                android:id="@+id/loginTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:textSize="35sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#333A02"
                android:layout_gravity="center"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter the email address associated with your account."
                android:textSize="15sp"
                android:fontFamily="@font/inter_500"
                android:textFontWeight="400"
                android:layout_gravity="center"
                android:textColor="#333A02"
                android:layout_marginTop="15dp" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:textColorHint="#333A02"
                android:textColor="@color/black"
                android:hint="Enter your email"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding= "10dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="20dp"
                android:layout_marginTop="35dp" />

            <!-- Remember Me and Forgot Password Row -->
            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP has been sent to your registered email account"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:visibility="invisible"
                android:textSize="15sp" />


            <!-- Signup Text -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtn"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@drawable/login_button_background"
                android:elevation="4dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#333A02"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/signupTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donâ€™t have an account?"
                    android:textColor="#333A02"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp" />
                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:textColor="#7A8C00"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>
