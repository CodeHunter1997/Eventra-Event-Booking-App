<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="25dp"
    android:background="#FAFFED"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Image Section with Arrows (Right Side) -->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:clipChildren="false">


        <!-- Main Image Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:backgroundTint="#FAFFED"
            android:background="@drawable/image_clip_shape_top_left">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:backgroundTint="#FAFFED"
                android:src="@drawable/testimonial_img"
                app:shapeAppearanceOverlay="@style/TopLeftRoundedImage" />

        </androidx.cardview.widget.CardView>

        <!-- Navigation Arrows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageContainer"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Left Arrow -->
            <!--            <LinearLayout-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginEnd="-165dp"-->
            <!--                android:orientation="horizontal">-->
            <!--            <ImageView-->
            <!--                android:id="@+id/leftArrow"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:src="@drawable/left_arrow"-->
            <!--                android:layout_marginEnd="5dp"/>-->

            <!--            &lt;!&ndash; Right Arrow &ndash;&gt;-->
            <!--            <ImageView-->
            <!--                android:id="@+id/rightArrow"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:src="@drawable/right_arrow"/>-->
            <!--            </LinearLayout>-->
        </LinearLayout>
    </RelativeLayout>

    <!-- Review Section (Left Side) -->
    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="169dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:elevation="2dp"
        android:layout_marginEnd="4dp">

        <!-- Background View with bottom-right corner radius -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bg_custom_radius"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Quote icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/ic_quote"/>

            <!-- Name -->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Jui Sharma"
                android:textColor="#1E0202"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <!-- Testimonial text -->
            <TextView
                android:id="@+id/testimonial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Eventra turned our vision into a flawless reality. From start to finish, every detail was handled with creativity, precision, and pure professionalism. Truly a team that delivers unforgettable experiences!"
                android:textAlignment="center"
                android:textColor="#6E6E6E"
                android:textSize="8sp"/>

            <!-- Stars -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView android:id="@+id/star1" android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/star"/>
                <ImageView android:id="@+id/star2" android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/star"/>
                <ImageView android:id="@+id/star3" android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/star"/>
                <ImageView android:id="@+id/star4" android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/star"/>
                <ImageView android:id="@+id/star5" android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/star"/>
                </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>