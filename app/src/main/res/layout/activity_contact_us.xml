<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">

    <!-- Background image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header bar with back arrow and title -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/back_icon_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Contact Us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333A02"
            android:fontFamily="@font/inter_bold" />
    </LinearLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/inboxScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:background="#FAFFED"
        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/responseNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_500"
                android:text="We usually respond in a few hours"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- First Name -->
            <TextView
                android:id="@+id/labelFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/responseNote"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background2"
                android:inputType="textPersonName"
                android:hint="Enter First Name"
                android:padding="12dp"
                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelFirstName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Last Name -->
            <TextView
                android:id="@+id/labelLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/firstName"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background2"
                android:hint="Enter Last Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelLastName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Email -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lastName"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background2"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Phone -->
            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/et_date"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/tv_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background2"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:padding="12dp"
                android:maxLength="10"

                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelPhone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Service Type -->
            <TextView
                android:id="@+id/labelServiceType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Type"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_time_label"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/serviceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background2"
                android:hint="Enter Service Type"
                android:inputType="text"
                android:padding="12dp"
                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelServiceType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Message -->
            <TextView
                android:id="@+id/labelMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Message"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:fontFamily="@font/inter_500"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/serviceType"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/edittext_background2"
                android:hint="Type your message"
                android:inputType="textMultiLine"
                android:gravity="start"
                android:padding="12dp"
                android:fontFamily="@font/inter_500"
                android:textColor="#333A02"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:background="@drawable/confirmed_button"
                android:fontFamily="@font/inter_bold"
                android:text="Submit Request"
                android:textAllCaps="false"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
