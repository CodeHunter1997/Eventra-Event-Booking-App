            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/organizer"
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:text="Organizer"
                    android:textSize="19sp"
                    android:textFontWeight="600"
                    android:textAllCaps="false"
                    android:textColor="#333A02"
                    android:fontFamily="@font/inter_bold"
                    app:backgroundTint="#E2F178"
                    app:cornerRadius="12dp"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/organizerIcon"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-80dp"
                    android:contentDescription="Organizer Icon"
                    android:src="@drawable/organizer_icon" />
            </FrameLayout>

            <!-- Signup Text -->
            <FrameLayout
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <!-- Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/attendee"
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:text="Attendee"
                    android:textSize="19sp"
                    android:textFontWeight="600"
                    android:textAllCaps="false"
                    android:textColor="#333A02"
                    android:fontFamily="@font/inter_bold"
                    app:backgroundTint="#BEE047"
                    app:cornerRadius="12dp"
                    android:gravity="center" />

                <!-- Image over the button, inside its bounds -->
                <ImageView
                    android:id="@+id/attendeeIcon"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="-80dp"
                    android:src="@drawable/attendee_icon"
                    android:contentDescription="Attendee Icon" />
            </FrameLayout>

            <LinearLayout
