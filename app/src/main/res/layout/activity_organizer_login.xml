<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_marginTop="-35dp"
            android:src="@drawable/vector_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo and App Name -->
            <!-- Logo and App Name -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/app_logo"
                android:contentDescription="Logo" />


            <TextView
                android:id="@+id/taglineTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Crafting Moments. Elevating Events"
                android:textSize="16sp"
                android:fontFamily="@font/inter_500"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-10dp"
                android:textColor="#5D6903" />

            <!-- Login Heading -->
            <TextView
                android:id="@+id/loginTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:fontFamily="@font/poppins_bold"
                android:textFontWeight="700"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_gravity="center"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back Organizer ! Please Login to your account."
                android:textSize="13sp"
                android:fontFamily="@font/inter_500"
                android:textFontWeight="500"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:hint="Enter your email"
                android:textColor="@color/black"
                android:textColorHint="#333A02"
                android:fontFamily="@font/inter_500"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding= "10dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="20dp"
                android:layout_marginTop="24dp" />

            <!-- Password EditText -->
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:hint="Enter your password"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_500"
                android:textColorHint="#333A02"
                android:drawableStart="@drawable/lock_icon"
                android:drawableEnd="@drawable/eye"
                android:paddingEnd="15dp"
                android:background="@drawable/edittext_background"
                android:drawablePadding= "10dp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"
                android:inputType="textPassword" />

            <!-- Remember Me and Forgot Password Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/rememberMeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333A02"
                    android:fontFamily="@font/inter_500"
                    android:layout_marginStart="15dp"
                    android:textFontWeight="400"
                    android:textSize="13dp"
                    android:text="Remember Me" />


                <TextView
                    android:id="@+id/forgotPasswordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:text="Forgot Password ?"
                    android:textFontWeight="500"
                    android:layout_marginStart="90dp"
                    android:textColor="#333A02"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:text="Login"
                android:fontFamily="@font/poppins_bold"
                android:textSize="22sp"
                android:textFontWeight="700"
                android:textColor="#333A02"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/login_button_background"
                android:elevation="4dp" />



            <!-- OR Text -->
            <TextView
                android:id="@+id/orTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_500"
                android:text="Or"
                android:textStyle="bold"
                android:textColor="#666666"
                android:visibility="gone"
                android:textSize="14sp" />

            <!-- Google Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/googleLoginButton"
                android:layout_width="320dp"
                android:layout_height="70dp"
                android:text="Login with"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="14dp"
                android:textFontWeight="500"
                android:paddingStart="105dp"
                android:fontFamily="@font/inter_500"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/google_icon"
                android:paddingEnd="110dp"
                android:background="@drawable/edittext_background"
                android:textColor="#333A02"
                android:textAllCaps="false"
                android:layout_marginTop="8dp" />

            <!-- Signup Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/signupTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/inter_500"
                    android:text="Donâ€™t have an account?"
                    android:textColor="#333333"
                    android:textFontWeight="400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#7A8C00"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />


            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>
