
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Dashboard"
        android:layout_weight="2"
        android:padding="5dp"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:fontFamily="@font/inter_bold"
        />

        <LinearLayout
            android:id="@+id/createEvent"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/purple_rounded_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/create_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textColor="#333A02"
                android:textSize="16sp"
                android:fontFamily="@font/inter_500"

                android:padding="5dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/create_event_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:fontFamily="@font/inter_500"
                android:text="+"
                android:textColor="#333A02"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/inboxScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:background="#FAFFED"

        app:layout_constraintTop_toBottomOf="@id/backgroundImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Stats Section -->
        <!-- Event Status Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="16dp">

            <!-- All Events Card -->
            <LinearLayout
                android:id="@+id/allLayout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:elevation="5dp"
                android:background="#FAFFED">

                <TextView
                    android:id="@+id/allEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Events"
                    android:textColor="#333A02"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/inter_bold"

                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/allEventCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#333A02"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Active Events Card -->
            <LinearLayout
                android:id="@+id/activeLayout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:elevation="5dp"
                android:background="#FAFFED">
                <TextView
                    android:id="@+id/active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Events"
                    android:textColor="#333A02"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_bold"

                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/activeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#333A02"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Cancelled Events Card -->
            <LinearLayout
                android:id="@+id/cancelLayout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:elevation="5dp"
                android:background="#FAFFED">

                <TextView
                    android:id="@+id/cancelEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel Events"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="#333A02"
                    android:textSize="14sp"

                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/cancelCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="#333A02"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- My Events Section -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="My Events"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myEventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"/>
</LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>