<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageViewPagerItem"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/card_image"
        android:contentDescription="Pager image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="bottom"
        android:layout_marginTop="100dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Webinar"
            android:fontFamily="@font/inter_bold"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.06.2025"
                android:fontFamily="@font/inter_bold"
                android:textColor="#F6FFB8"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyTickets"
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:background="@drawable/book_now_button_bg"
                android:elevation="4dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="#333A02"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
