<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/back_icon_black" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="122dp"
            android:layout_height="122dp"

            android:layout_gravity="center_horizontal"
            android:background="@drawable/oval_background">

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                android:src="@drawable/delete_bucket" />
        </FrameLayout>

        <!-- Details -->
        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:padding="12dp"
            android:text="Delete Account"
            android:textColor="#333A02"
            android:textFontWeight="600"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_background2"
            android:fontFamily="@font/inter_500"
            android:gravity="center"
            android:padding="12dp"

            android:hint="Please confirm your registered Email ID"
            android:textColor="#333A02"
            android:textFontWeight="600"
            android:textSize="14sp" />

        <TextView
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_500"
            android:gravity="center"
            android:padding="12dp"
            android:text="Are You Sure You Want to Delete Your account? This Action Cannot be Undone."
            android:textColor="#B2FF4639"
            android:textFontWeight="600"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteBtn"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/delete_btn"
            android:fontFamily="@font/inter_bold"
            android:text="Delete Account"

            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>