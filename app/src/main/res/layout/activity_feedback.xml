<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFFED">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:src="@drawable/homepage_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/backgroundImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Back"
            android:src="@drawable/back_icon_black" />

        <TextView
            android:id="@+id/feedbackHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Send Us Feedback"
            android:textFontWeight="500"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333A02"
            android:fontFamily="@font/inter_bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedbackSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Us improve"
            android:textSize="16sp"
            android:fontFamily="@font/inter_500"
            android:textFontWeight="500"
            android:textColor="#333A02"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We usually respond in a few hours"
            android:textSize="14sp"
            android:fontFamily="@font/inter_500"
            android:textFontWeight="500"
            android:textColor="#333A02"
            android:layout_marginTop="5dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="210dp"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:fontFamily="@font/inter_500"
            android:textColor="#45463F"/>
        <EditText
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Feedback for eventra App"
            android:padding="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/inter_500"
            android:layout_weight="400"
            android:textColorHint="#6E6E6E"
            android:background="@drawable/edittext_background2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Message"
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:textSize="14sp"
            android:fontFamily="@font/inter_500"
            android:textColor="#45463F"/>

        <EditText
            android:id="@+id/yourMessage"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="start"
            android:padding="10dp"
            android:textSize="12dp"
            android:fontFamily="@font/inter_500"
            android:layout_weight="400"
            android:textColorHint="#6E6E6E"
            android:background="@drawable/edittext_background2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:background="@drawable/confirmed_button"
            android:fontFamily="@font/inter_bold"
            android:text="Send a message"
            android:textAllCaps="false"
            android:textColor="#333A02"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>