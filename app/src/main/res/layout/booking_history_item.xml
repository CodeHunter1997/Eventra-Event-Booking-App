<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="24dp"
    android:layout_marginTop="15dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="#FAFFED">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Event Title -->
        <TextView
            android:id="@+id/ticketNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Number of tickets: 1"
            android:textSize="18sp"
            android:textColor="#333A02"
            android:textStyle="bold"
            android:fontFamily="@font/inter_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Concert Name -->
        <TextView
            android:id="@+id/eventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arijit Singh Live Concert 2025"
            android:textSize="18sp"
            android:textColor="#333A02"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_bold"
            app:layout_constraintTop_toBottomOf="@id/ticketNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Calendar Icon -->
        <ImageView
            android:id="@+id/calendarIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/calender"
            app:layout_constraintTop_toBottomOf="@id/eventName"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/calendarIcon"
            app:layout_constraintBottom_toBottomOf="@id/calendarIcon"
            app:layout_constraintStart_toEndOf="@id/calendarIcon"
            app:layout_constraintEnd_toEndOf="parent" >
        <TextView
            android:id="@+id/tv_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday, 25th April 2025"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="#333A02"
            android:fontFamily="@font/inter_500"/>
            <TextView
                android:id="@+id/tv_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 6:00 PM"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:textColor="#333A02"
                android:fontFamily="@font/inter_500"/>

        </LinearLayout>
        <!-- Venue and Status Row -->

        <LinearLayout
            android:id="@+id/venueLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintVertical_bias="0.085">

            <!-- Location + Venue Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/location_green" />

                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:text="Eco Park"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:text="Eco Park"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp" />
            </LinearLayout>

                 </LinearLayout>

        <LinearLayout
    android:id="@+id/ratings"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    app:layout_constraintTop_toBottomOf="@id/venueLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating_feedback"
        android:fontFamily="@font/inter_bold"
        android:textFontWeight="700"
        android:textSize="14dp"
        />
            <LinearLayout
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <ImageView  android:id="@+id/start1" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginEnd="2dp" android:src="@drawable/star"/>
                <ImageView  android:id="@+id/start2" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginEnd="2dp" android:src="@drawable/star"/>
                <ImageView  android:id="@+id/start3" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginEnd="2dp" android:src="@drawable/star"/>
                <ImageView  android:id="@+id/start4" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginEnd="2dp" android:src="@drawable/star"/>
                <ImageView  android:id="@+id/start5" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginEnd="2dp" android:src="@drawable/star"/>
            </LinearLayout>
</LinearLayout>
            <!-- Confirmed Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_button"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_gravity="start"
                android:layout_marginStart="60dp"
                android:background="@drawable/button_cancel_background"
                android:fontFamily="@font/inter_bold"
                android:text="Cancel booking"
                android:textAllCaps="false"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
            <EditText
                android:id="@+id/feedbackBox"
                android:layout_width="280dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:hint="Write your experience"
                android:padding="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/inter_500"
                android:layout_weight="400"
                android:textColorHint="#6E6E6E"
                android:background="@drawable/edittext_background2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:background="@drawable/confirmed_button"
                android:fontFamily="@font/inter_bold"
                android:text="Submit Feedback"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textAllCaps="false"
                android:textColor="#333A02"
                android:textSize="14sp"
                android:textStyle="bold" />

</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
