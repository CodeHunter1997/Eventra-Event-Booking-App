<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:left="0dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#5A6E3F2E" /> <!-- Simulated shadow -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Foreground (actual shape) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFFED" />
            <stroke android:width="1dp" android:color="#CECECE"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>
